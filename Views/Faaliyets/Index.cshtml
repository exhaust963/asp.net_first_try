@model IEnumerable<staj2.data.Faaliyet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="exit" style="text-align:right;padding-right:40px;padding-top:20px;color:gray;padding-bottom:3px;">
    <br />
    <h6><i class="fa fa-envelope"></i>&emsp;&emsp;<i class="fa fa-sign-out"></i>&emsp;<a href="http://localhost:53838/" style="color:gray;font-size:14px;">Çıkış</a></h6>
</div>
<div class="yazi">
    <div class="baslangic" style="width:100%;height:90px;margin-top:10px;padding-left:25px;background-color:white;padding-top:3px;">
        <h2 style="font-size:23px;font-family:Arial, Helvetica, sans-serif;">Faaliyet İşlemleri</h2>
        <h5 style="font-size:13px;"><a href="http://localhost:53838/Main/Anasayfa" style="color:gray;font-size:13px;">Anasayfa</a>&emsp;/&emsp;<strong>Faaliyetler</strong></h5>
    </div>
</div>
<br />
<div style="background-color:white;margin-left:10px;height:auto;">
    <span style="margin-left:10px;color:gray;"> Faaliyet Listesi</span>
    <hr />
    <form action="/Faaliyets/Index" method="post" />
    @using (Html.BeginForm("Index", "Faaliyets", FormMethod.Get))
    {
        <label style="display:inline">Faaliyet Atayan</label>
        <input type="text" name="sorgu1" style="display:inline"/>
        <label style="margin-left:24px;display:inline">Faaliyet Tür</label>
        <input type="text" name="sorgu2" />
    <label style="margin-left:4px;">Faaliyet Sahibi</label>
    <input type="text" name="sorgu3" />
    <label>Önem Derecesi</label>
    <input type="text" name="sorgu4" />
    <br />
    <label style="margin-left:67px;">Konu</label>
    <input type="text" name="sorgu5" />
    <label style="margin-left:68px;">Proje</label>
    <input type="text" name="sorgu6" />
    <br />
    <div style="width:80px;display:inline;margin-right:15px;">
        <button type="button" style="margin-left:80%;;background-color:steelblue;height:35px;border-radius:5px;color:white;border-color:steelblue;" onclick="location.href='@Url.Action("Create","Faaliyets")'">+ Faaliyet Ekle</button>
    </div>
    <div style="background-color:green;width:80px;display:inline;margin-left:3px;">
        <input class="btn btn-primary btn-xl" type="submit" value="? Sorgu" style="background-color:green" />

    </div>
    }
    <table class="table">
        <tr>
            <th width="7%;">
               No
            </th>
            <th width="15%;">
                Konu
            </th>
            <th>
               Faaliyet Sahibi
            </th>
            <th>
                Faaliyet Atayan
            </th>
            <th>
                Oluşturulma Tarihi
            </th>
            <th>
                Proje 
            </th>
            <th>
                Faaliyet Türü
            </th>
            <th>
                Önem Derecesi
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Faaliyet_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Konu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faaliyet_sahibi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faaliyet_atayan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oluşturma_tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faaliyet_tür)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Önem_derecesi)
                </td>
               
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Faaliyet_id }, new { style = "background-color:green;color:white;" }) <strong>/</strong>
                    @Html.ActionLink("Sil", "Delete", new { id = item.Faaliyet_id }, new { style = "background-color:red;color:white;" })
                </td>
            </tr>
        }
    </table>
   
</div>
