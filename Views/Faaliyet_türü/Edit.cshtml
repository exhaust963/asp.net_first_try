            </div>
        </div>

        <div class="form-group" style="width:90%;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="✓ Kaydet" class="btn btn-default" style="background-color:steelblue;color:white;" /> 
        <div style="width:80px;display:inline;margin-right:15px;">
            <button type="button" style="background-color:green;height:35px;border-radius:5px;color:white;border-color:green;" onclick="location.href='@Url.Action("Index","Faaliyet_türü")'">← Geri</button>
        </div>
                </div>
    </div>
        </div>
}
